# Makefile to compile C program, with Warnings, and clean up
CC=gcc
SRC=bootcamp.c main.c
NAME=bootcamp
OBJ=$(patsubst .c,.o,$(SRC))
RM=
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
ifneq ("$(wildcard *.h)","")
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)
endif

clean:
	$(RM) *~ $(NAME)

oclean:
ifneq ("$(wildcard $(OBJ))","")
	$(RM) $(OBJ)
endif

fclean: clean oclean

re: fclean all
